	"Import from this directory": {
		"prefix": "import::here",
		"body": ["import {${0}} from \"./${1}\";"],
		"description": "Import modules from this directory"
	},
	"Import React": {
		"prefix": "imr",
		"body": ["import React from \"react\";", ""]
	},
	"Stateless functional component": {
		"prefix": "sfc",
		"body": [
			"const ${1} = (${2}) => (",
			"\t${0}",
			");",
			"",
			"export default ${1};"
		]
	},
	"Import styled components": {
		"prefix": "imsc",
		"body": ["import styled from \"styled-components\";", ""]
	},
	"Imp styled comp w/css": {
		"prefix": "imsc::css",
		"body": ["import styled, { css } from \"styled-components\";", ""],
		"description": "Creates styled component with css module import"
	},
	"Imp styled comp w/utils, verbose": {
		"prefix": "imscvb::utils",
		"body": [
			"import styled from \"styled-components\";",
			"",
			"import { FlexCenter } from \"../../style-utils/utils.styles\";",
			"",
			"export const ${1:MyComponent} = styled.${2:div}`",
			"\t${0}",
			"`;"
		],
		"description": "Creates styled component with refs to utils"
	},
	"Imp styled comp w/utils": {
		"prefix": "imsc::utils",
		"body": [
			"import { FlexCenter } from \"../../style-utils/utils.styles\";",
			""
		],
		"description": "Creates styled component with refs to utils"
	},
	"Import media queries from utils": {
		"prefix": "im::mq",
		"body": ["import { device } from \"../../style-utils/utils.styles\";"],
		"description": "Import media queries for styled-components from utils"
	},
	"Destructure media queries": {
		"prefix": "ds::mq",
		"body": ["const { ${0} } = device;"],
		"description": "Creates destructure block for media queries"
	},
	"Destructure media queries verbose": {
		"prefix": "ds::mqvb",
		"body": [
			"const { mobileS, mobileM, tabletS, tabletLand, laptopS, laptopM, laptopL, desktop, desktopL } = device;"
		],
		"description": "Creates destructure block for media queries with all options"
	},
	"Imp styled comp boilerplate": {
		"prefix": "imsc::bp",
		"body": [
			"import styled from \"styled-components\";",
			"",
			"export const ${1:MyComponent} = styled.${2:div}`",
			"\t${0}",
			"`;"
		],
		"description": "Creates styled component with basic boilerplate, no utils"
	},
	"Export styled component": {
		"prefix": "exsc",
		"body": ["export const ${1:Component} = styled.${2:div}`", "\t${0}", "`;"]
	},
	"Export css styles": {
		"prefix": "excss",
		"body": ["export const ${1:MyStyles} = css`", "\t${0}", "`;"]
	},
	"Styled-components function": {
		"prefix": "scfn",
		"body": ["({${0}}) => "]
	}
